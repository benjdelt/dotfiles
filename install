#!/usr/bin/env bash

readonly SCRIPT_DIR=$(dirname "$0")

cd "$(pwd)/$SCRIPT_DIR" || exit 1

source ./scripts/helpers.sh

# Option list
optlist=":aAdhptTv"

# Process help first
while getopts $optlist options; do
    case ${options} in
	h)
	    cat ./text/install-help.txt
	    exit 0
	    ;;
    esac
done
OPTIND=1

# Process the run All scripts option in priority
while getopts $optlist options; do
    case ${options} in
	A) 
	    msg_info 'Running All install scripts...'
	    ./scripts/setup-terminal
	    ./scripts/install-deb-packages
	    ./scripts/install-cli-tools
	    ./scripts/install-dotfiles
	    ./scripts/setup-vim
            if [[ "$?" == 0 ]]; then
                msg_success 'Installation script run successfully'
	        exit 0 
            fi
	    ;;
    esac
done
OPTIND=1

# Then process the almost all scripts option
while getopts $optlist options; do
    case ${options} in
        a) 
	    msg_info 'Running all install scripts except install-deb-packages...'
	    ./scripts/install-cli-tools
	    ./scripts/install-dotfiles
	    ./scripts/setup-vim
            if [[ "$?" == 0 ]]; then
                msg_success 'Installation script run successfully'
	        exit 0 
            fi
	    ;;
    esac
done
OPTIND=1

# Finally process the rest of the options
while getopts $optlist options; do
    case ${options} in
	d) msg_info 'Running install-dotfiles...' 
	./scripts/install-dotfiles
	;;
	p) msg_info 'Running install-deb-packages' 
	./scripts/install-deb-packages
	;;
	t) msg_info 'Running install-cli-tools' 
	./scripts/install-cli-tools
	;;
        T) msg_info 'Running setup-terminal'
	./scripts/setup-terminal
	;;
	v) msg_info 'Running setup-vim...' 
	./scripts/setup-vim
	;;
	\?) echo "Invalid option: $OPTARG" 1>&2
            echo "Try './scripts/install -h' for more information" 1>&2
	    exit 1
	    ;;
    esac
done
shift $((OPTIND -1))

handle_missing_option OPTIND
handle_invalid_arg "$#" "$@"

if [[ "$?" == 0 ]]; then
    msg_info 'Installation script run successfully'
fi

